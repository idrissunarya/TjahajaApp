    .card-footer.clearfix
      button.btn.btn-info.float-right(type='button', data-toggle='modal', data-target='#formAddToDoList')
        i.fas.fa-plus
        |  Add item

      #formAddToDoList.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              h5#ToDoModalLabel.modal-title Add Todo 
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') ×
            .modal-body
              form
                .form-group
                  label(for='name') Name
                  input#name.form-control(type='text', aria-describedby='todoHelp', placeholder='Enter Todo')
                  small#todoHelp.form-text.text-muted You must input todo
                .form-group
                  label(for='exampleInputPassword1') Author
                  input#author.form-control(type='text', placeholder='Author')
                .form-group
                  label Date range:
                  .input-group
                    .input-group-prepend
                      span.input-group-text
                        i.far.fa-calendar-alt
                    input#reservation.form-control.float-right(type='text')

            .modal-footer
              button.btn.btn-secondary(type='button', data-dismiss='modal') Close
              button.btn.btn-primary(type='button') Save changes

